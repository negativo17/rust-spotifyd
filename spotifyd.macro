(
set -eu
/usr/bin/mkdir -p .cargo
cat > .cargo/config << EOF
[build]
rustc = "/usr/bin/rustc"
rustdoc = "/usr/bin/rustdoc"
rustflags = ["-Copt-level=3", "-Cdebuginfo=2", "-Clink-arg=-Wl,-z,relro,-z,now", ]

[term]
verbose = true
EOF
/usr/bin/rm -f Cargo.lock
%if ! 0
# https://github.com/rust-lang/cargo/issues/3732 
gawk -i inplace -v INPLACE_SUFFIX=.orig '/^\[dev-dependencies/{f=1;next} /^\[/{f=0}; !f' Cargo.toml
%endif
)
